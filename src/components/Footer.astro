---
import Hr from './Hr.astro'
import Socials from './Socials.astro'

const { message = 'Hello, world!' } = Astro.props
---

<footer class={'mt-auto w-full'}>
  <Hr noPadding />
  <div
    class='footer-wrapper flex flex-col items-center justify-between py-6 sm:flex-row-reverse sm:py-4'
  >
    <Socials centered />
    <div class='my-2 flex flex-col items-center whitespace-nowrap sm:flex-row'>
      {message}
    </div>
  </div>
</footer>
