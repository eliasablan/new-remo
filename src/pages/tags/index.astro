---
// layout and components
import Layout from '../../layouts/Layout.astro'
import Main from '../../layouts/Main.astro'
import Tag from '../../components/Tag.astro'
// site config
import { SITE } from '../../config'
// queries
import { getTags } from '../../lib/sanity/utils/sanityQueries'

const tags = await getTags()
---

<Layout title={`Tags | ${SITE.title}`} activeNav='tags'>
  <!-- <Header activeNav='tags' /> -->
  <Main
    pageTitle='Tags'
    pageDesc='Todos los tags utilizados en nuestras publicaciones.'
  >
    <ul>
      {tags && tags.map(({ slug }) => <Tag {slug} size='lg' />)}
    </ul>
  </Main>
</Layout>
